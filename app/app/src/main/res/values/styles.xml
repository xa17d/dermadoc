<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabText</item>
        <item name="tabSelectedTextColor">@color/tab_text_act</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tab_text</item>
    </style>

    <style name="CaseListItemHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/case_list_header_text</item>
        <item name="android:singleLine">true</item> <!-- does not work via styles.xml? -->
        <item name="android:ellipsize">marquee</item> <!-- does not work via styles.xml? -->
    </style>

    <style name="CaseListItemSecondaryInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item> <!-- does not work via styles.xml? -->
        <item name="android:ellipsize">marquee</item> <!-- does not work via styles.xml? -->
    </style>

    <style name="CaseListItemInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item> <!-- does not work via styles.xml? -->
        <item name="android:ellipsize">marquee</item> <!-- does not work via styles.xml? -->
    </style>

    <style name="NavDrawerTextStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="HintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

    <style name="NewCaseMainHeaderText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PainScale" >
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="QuestionLayoutElement" >
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="QuestionText" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditCaseNextButton" >
        <item name="android:textColor">@color/next_button_text</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="FinishEditingButton" parent="EditCaseNextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/finish_button_background_shape</item>
    </style>

    <style name="EditCaseTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@drawable/tab_header_background_element_layer</item>
        <item name="tabTextAppearance">@style/EditCaseTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/tab_header_selected_text_color</item>
    </style>

    <style name="EditCaseTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_header_text_color</item>
        <!-- todo -->
    </style>

    <style name="UserDataListItemHeaderText" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <!-- todo -->
    </style>

    <style name="UserDataListItemText" >
        <item name="android:textSize">18sp</item>
        <!-- todo -->
    </style>

    <style name="ErrorListItemHeaderText" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <!-- todo -->
    </style>

    <style name="ErrorListItemInfoText" >
        <item name="android:textSize">18sp</item>
        <!-- todo -->
    </style>

</resources>
